class MrEEventHandler extends Actor;

var MrEMutator Mut;

 function string GetItemName(string FullName)
 {
 	if(Left(FullName, 10) ~= "PLAYERJOIN")
 	{
 		Mut.NewPlayerNPLogin(int(mid(FullName, 11, 3)));
 	}
 	return "";
 }

